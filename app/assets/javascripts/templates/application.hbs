<div class="navbar navbar-inverse navbar-static-top">
  <div class="navbar-inner">
    <div class="container">
      {{link-to "集钱网" "entries" class="brand"}}
      <ul class="nav">
        <li>{{link-to "钱生钱" "entries"}}</li>
        <li>{{link-to "提交" "entries.new"}}</li>
        <li>{{link-to "关于" "about"}}</li>
      </ul>
      <div class="pull-right">
        {{#if session.isAuthenticated}}
          {{#view Qian.SignedinView}}
            {{session.username}}&nbsp;&nbsp;&nbsp;{{gravatar-image emailHash=session.gravatar_email_hash}}

            {{#link-to "account" id="account" title="设置"}}
              <i class="fa fa-cog"></i>
            {{/link-to}}

            <a {{ action 'invalidateSession' }} href="" id="signout" title="退出">
              <i class="fa fa-sign-out"></i>
            </a>
          {{/view}}
        {{else}}
          <div class="user-signin">
            {{link-to "登录" "signin"}} | {{link-to "注册" "signup"}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="container">
  {{outlet}}
</div>
